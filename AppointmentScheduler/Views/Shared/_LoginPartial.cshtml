@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentScheduler.Models.ApplicationIdentityUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoofForm" asp-controller="Account" asp-action="Logoff">
        <ul class="nav navbar-nav">
            <li class="nav-link text-white">
                Hello, @HttpContextAccessor.HttpContext.Session.GetString(AppointmentScheduler.Utility.Helper.LoggedUserSession)
            </li>
            @if (User.IsInRole(AppointmentScheduler.Utility.Helper.Admin))
            {
                <li class="nav-item">
                    <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Create Account</a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link text-white" id="logoffLink" href="javascript:document.getElementById('logoofForm').submit()">Sign Out</a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" id="registerLink" asp-controller="Account" asp-action="Register">Create Account</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" id="loginLink" asp-controller="Account" asp-action="Login">Sign In</a>
        </li>
    </ul>
}

<div class="row">
    <div class="container">
        @if (User.IsInRole(AppointmentScheduler.Utility.Helper.Admin))
        {
            <div class="form-group row" id="divServiceProviderList">
                <label>Select @AppointmentScheduler.Utility.Helper.ServiceProvider</label>
                @Html.DropDownList("serviceProviderId", new SelectList(ViewBag.ServiceProviderList, "Id", "Name"), new
                { @class = "form-control select2", @onchange = "onServiceProviderSelection();" })
            </div>
        }
        <div id="calendar"></div>
    </div>
</div>

